{
  "name": "@emit-js/header-nav-view",
  "version": "0.0.18",
  "description": "emit header & nav view",
  "keywords": [
    "emit",
    "header",
    "nav"
  ],
  "author": "emit <emit@emit-js.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/emit-js/header-nav-view.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/emit-js/header-nav-view#readme",
  "main": "dist/headerNavView.js",
  "scripts": {
    "build": "rm -rf dist; babel *.jsx test/page --out-dir dist --source-maps",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "prepublishOnly": "npm run build",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "sass": "node-sass *.scss --follow --output dist --source-maps",
    "test": "npm run build; npm run sass; webpack --mode=production; jest; open dist/headerNavTest.html"
  },
  "dependencies": {
    "@babel/runtime": "7.4.3"
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "7.4.3",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-runtime": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@babel/preset-react": "7.0.0",
    "@emit-js/controller": "0.0.18",
    "@emit-js/css": "0.0.7",
    "@emit-js/el": "0.0.13",
    "@emit-js/emit": "3.2.9",
    "@emit-js/log": "1.0.39",
    "@emit-js/render": "0.0.24",
    "@emit-js/store": "7.0.20",
    "@emit-js/view": "0.0.35",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "node-sass": "4.11.0",
    "prettier": "1.16.4",
    "webpack": "4.29.6",
    "webpack-cli": "3.3.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "> 0.5%",
              "last 2 versions",
              "Firefox ESR",
              "not dead"
            ]
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "curly": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "max-len": [
        "error",
        {
          "code": 60,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "never"
      ],
      "sort-keys": [
        "error",
        "asc",
        {
          "caseSensitive": true,
          "natural": false
        }
      ],
      "sort-vars": [
        "error",
        {
          "ignoreCase": true
        }
      ],
      "strict": 0,
      "react/display-name": "off",
      "react/jsx-key": "off",
      "react/no-deprecated": "off",
      "react/no-find-dom-node": "off",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/**/*Test.jsx"
    ]
  }
}
